
html(lang="en")
	head
		include ./templates/html-header.jade

	body(ng-app="linkmanApp" ng-controller="mainController")

		header
			.page-wrapper
				h1
					.icon.fa.fa-connectdevelop 
					span  LINKMAN
				//.search-icon
					.icon.fa.fa-search

		main

			section#linkcontainer
				.page-wrapper
					linkcontainer.animated.fadeInUpe
						.header 
							span LINKS
						.list
							.link.animate-repeat(ng-repeat="link in links")
								.icon.fa.fa-bookmark-o
								.title(title="test") {{ link.title }}
								.linktext {{ link.src }}
								.link-controls
									.icon.fa.fa-files-o
									.icon.fa.fa-pencil
									.icon.fa.fa-trash-o



			//.section#addlink
				.addlink-form.show

					.header
						h3.title ADD A NEW LINK
						i.icon.fa.fa-times
					//p http://tympanus.net/Development/DialogEffects/cathy.html

					.main
						.form-group
							input.field(type="text" id="input-title" required)
							label(for="input-title") TITLE
							
						.form-group
							input.field(type="text" id="input-url" required)
							label(for="input-url") URL
							
						.form-group
							input.field(type="text" id="input-key" required)
							label(for="input-key") KEYWORDS

					.footer
						.form-group
							.action.cancel CANCEL
							.action.submit SUBMIT THIS LINK



		//footer
			.page-wrapper
				.icon.fa.fa-code  dominic kolbe




		.add(ng-controller="AddLinkCtrl")
			input(type="text" ng-model="title")
			input(type="text" ng-model="url")
			input(type="button" value="hinzuf√ºgen" ng-click="add()")


			i.resetdata(ng-click="reset()") reset data

		include ./templates/html-footer.jade
	